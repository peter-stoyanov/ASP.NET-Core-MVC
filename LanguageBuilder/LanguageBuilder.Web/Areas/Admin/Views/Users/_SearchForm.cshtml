@model UsersSearchFormViewModel

<form class="autosubmit form-inline my-3" role="form" asp-controller="Users" asp-action="Search" method="get" asp-antiforgery="false">
    <div class="form-group w-50">
        <label asp-for="Keywords"></label>
        <input asp-for="Keywords" placeholder="search by username, full name or email ..." title="Search users in database" class="form-control my-3 mx-3 w-75" type="text" />
        <span asp-validation-for="Keywords"></span>
    </div>

    <div class="form-group">
        <label asp-for="RowCount"></label>
        <select asp-for="RowCount" class="form-control my-3 mx-3" asp-items="Model.RowCounts.Select(r => new SelectListItem() { Value = r.ToString(), Text = r.ToString() })"></select>
        <span asp-validation-for="RowCount"></span>
    </div>

    <a class="btn btn-warning" asp-controller="Users" asp-action="Search">Reset</a>
</form>

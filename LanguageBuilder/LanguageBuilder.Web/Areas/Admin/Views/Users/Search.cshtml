@using System.Linq;
@model UsersSearchViewModel

@{
    ViewBag.Title = "Search users in the database";
}

<h2>@ViewBag.Title</h2>

@await Component.InvokeAsync(nameof(BootstrapAlertComponent), TempData[WebConstants.AlertKey] as BootstrapAlertViewModel)

@Html.Partial("_SearchForm", Model.SearchForm)



@if (Model.Data.Any())
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>UserName</th>
                <th>Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Data)
            {
                <tr>
                    <td>@user.UserName </td>
                    <td>@user.Name </td>
                    <td>@user.Email </td>
                    <td>
                        <a asp-controller="Users" asp-action="Edit" title="Edit User"><i class="fa fa-pencil contact small-icon" aria-hidden="true"></i></a>
                        <a asp-controller="Users" asp-action="Clone" title="Clone User"><i class="fa fa-files-o contact small-icon" aria-hidden="true"></i></a>
                        <a asp-controller="Users" asp-action="Delete" title="Delete User"><i class="fa fa-trash contact small-icon btn-delete" aria-hidden="true"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
    @Html.Partial("_Pager", Model.Paging)

    @await Component.InvokeAsync(
        nameof(BootstrapModalComponent),
        new BootstrapModalViewModel()
    {
        Body = "Do you want to delete this user.",
        ConfirmButtonName = "Yes",
        Title = "Confirm delete",
        CancelButtonName = "No",
        Id = "delete-modal",
        ConfirmButtonId = "modal-confirm"
    })

}

@section Scripts {
    <script type="text/javascript">

        $(document).ready(function () {

            var dialog = $('#delete-modal').modal({ show: false });
            var clickedWord = undefined;

            $('.btn-delete').on('click', function (event) {
                event.preventDefault();
                clickedWord = $(event.target)
                dialog.modal().show();
            });

            $('#modal-confirm').on('click', function (event) {
                //$.ajax({
                //    type: "POST",
                //    url: '/Users/DeleteConfirmed/' + clickedWord.data('id'),
                //    data: {},
                //    success: undefined
                //});
            });

        });
    </script>
}

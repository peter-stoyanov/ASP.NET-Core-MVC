@model TranslationsSearchFormViewModel

<form id="search-form" class="autosubmit form-inline my-3" role="form" asp-controller="Translations" asp-action="Search" method="get" asp-antiforgery="false">
    <div class="form-group">
        <label asp-for="Keywords"></label>
        <input asp-for="Keywords" placeholder="type keyword ..." title="Search in dictionaries" class="form-control my-3 mx-3" type="text" />
        <span asp-validation-for="Keywords"></span>
    </div>

    <div class="form-group">
        <label asp-for="SourceLanguageId"></label>
        <select asp-for="SourceLanguageId" class="form-control my-3 mx-3" asp-items="Model.Languages.Select(l => new SelectListItem() { Value = l.Id.ToString(), Text = l.Name })"></select>
        <span asp-validation-for="SourceLanguageId"></span>
    </div>

    <div class="form-group">
        <label asp-for="TargetLanguageId"></label>
        <select asp-for="TargetLanguageId" class="form-control my-3 mx-3" asp-items="Model.Languages.Select(l => new SelectListItem() { Value = l.Id.ToString(), Text = l.Name })"></select>
        <span asp-validation-for="TargetLanguageId"></span>
    </div>

    <div class="form-group">
        <label asp-for="RowCount"></label>
        <select asp-for="RowCount" class="form-control my-3 mx-3" asp-items="Model.RowCounts.Select(r => new SelectListItem() { Value = r.ToString(), Text = r.ToString() })"></select>
        <span asp-validation-for="RowCount"></span>
    </div>

    <a class = "btn btn-warning" asp-controller="Translations" asp-action="Search">Reset</a>
</form>

@model LanguageBuilder.Web.ViewModels.TranslationViewModels.TranslationsSearchViewModel

<div class="mt-2 mb-4">
    <cs-pager cs-paging-pagesize="@Model.Paging.ItemsPerPage"
              cs-paging-pagenumber="@Model.Paging.CurrentPage"
              cs-paging-totalitems="@Model.Paging.TotalItems"
              cs-pagenumber-param="page"
              cs-show-first-last="@Model.Paging.ShowFirstLast"
              cs-suppress-empty-nextprev="@Model.Paging.SuppressEmptyNextPrev"
              cs-suppress-inactive-firstlast="@Model.Paging.SuppressInActiveFirstLast"
              cs-first-page-text="First"
              cs-last-page-text="Last"
              cs-pager-ul-class="pagination"
              cs-pager-li-current-class="page-item active"
              cs-pager-li-other-class="page-item"
              cs-pager-li-non-active-class="page-item disabled"
              cs-pager-link-current-class="page-link"
              cs-pager-link-other-class="page-link"
              asp-route="default"
              asp-route-keywords="@Model.SearchForm.Keywords"
              asp-route-sourceLanguageId="@Model.SearchForm.SourceLanguageId"
              asp-route-targetLanguageId="@Model.SearchForm.TargetLanguageId"
              asp-route-rowCount="@Model.SearchForm.RowCount"
              asp-route-sortColumn="@Model.SearchForm.SortOptions.SortColumn"
              asp-route-sortDirection="@Model.SearchForm.SortOptions.SortDirection"
              asp-controller="Translations"
              asp-action="Search">
    </cs-pager>
</div>

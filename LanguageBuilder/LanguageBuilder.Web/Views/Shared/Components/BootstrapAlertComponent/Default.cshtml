@model BootstrapAlertViewModel

@if (Model == null)
{
    return;
}

@{
    string bootstrapClass = $"alert alert-{Model.Type.ToString().ToLower()} alert-dismissible fade show";
}


<div class="@bootstrapClass" role="alert">

    @if (!String.IsNullOrWhiteSpace(Model.StrongText))
    {
        <span class="mr-2"><strong>@Model.StrongText</strong></span>
    }

    @Model.Text

    @if (Model.HasDismissButton)
    {
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true"><i class="fa fa-times" aria-hidden="true"></i></span>
        </button>
    }
</div>

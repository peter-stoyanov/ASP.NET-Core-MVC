@using Microsoft.AspNetCore.Identity
@using LanguageBuilder.Data.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

        <header>
            <div class="container-fluid d-flex justify-content-between bg-primary">
                <nav class="navbar navbar-expand-md navbar-dark">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand mr-5">LanguageBuilder</a>
                    <button class="navbar-toggler" type="button"
                            data-toggle="collapse"
                            data-target="#navbarNavAltMarkup"
                            aria-controls="navbarNavAltMarkup"
                            aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav">
                            <a class="nav-item nav-link mr-3" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            <a class="nav-item nav-link mr-3" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </div>
                        @*@Html.Partial("_LoginPartial") // split the partial views*@

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
                                <ul class="navbar-nav ml-auto">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
                                    </li>
                                    <li class="nav-item">
                                        <button type="submit" class="btn">Log out</button>
                                    </li>
                                </ul>
                            </form>
                        }
                        else
                        {
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
                                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
                            </ul>
                        }
                    </div>
                </nav>
            </div>
        </header>

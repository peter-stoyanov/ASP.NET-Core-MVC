@using Microsoft.AspNetCore.Identity
@using LanguageBuilder.Data.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{ 
    var loggedUser = (User)ViewBag.LoggedUser;
}

<header>
    <div class="container-fluid d-flex justify-content-between bg-primary">

        <nav class="navbar navbar-expand-lg navbar-dark">
            <!-- Brand -->
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand mr-5">LanguageBuilder</a>

            <button class="navbar-toggler" type="button"
                    data-toggle="collapse"
                    data-target="#navbarNavAltMarkup"
                    aria-controls="navbarNavAltMarkup"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Links -->
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <ul class="navbar-nav mr-auto">
                    
                    <li class="nav-item @(ViewContext.IsCurrentUrl("home", "index") ? "active" : String.Empty)">
                        <a class="nav-link mr-3" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    
                    @if (loggedUser != null && await UserManager.IsInRoleAsync(loggedUser, WebConstants.UserRole))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(ViewContext.IsCurrentUrl("words", new[] { "my", "create", "search" }) ? "active" : String.Empty)" 
                               href="#" id="navbarDropdownTranslations"
                               role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Translations
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownTranslations">
                                <a class="dropdown-item" asp-area="" asp-controller="Words" asp-action="My">My translations</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Words" asp-action="Create">Create new translation</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Words" asp-action="Search">Browse translations</a>
                            </div>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(ViewContext.IsCurrentUrl("words", new[] { "train", "match", "reproduce" }) ? "active" : String.Empty)" 
                               href="#" id="navbarDropdownStudy"
                               role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Study
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownStudy">
                                <a class="dropdown-item" asp-area="" asp-controller="Words" asp-action="Train">Train</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Words" asp-action="Match">Match</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Words" asp-action="Reproduce">Reproduce</a>
                            </div>
                        </li>
                    }

                    <li class="nav-item @(ViewContext.CurrentArea() == "blog" && ViewContext.CurrentAction() == "index" ? "active" : String.Empty)">
                        <a class="nav-link mr-3" asp-area="Blog" asp-controller="Articles" asp-action="Index">Blog</a>
                    </li>
                    
                    @if (loggedUser != null && await UserManager.IsInRoleAsync(loggedUser, WebConstants.BlogAuthorRole))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(ViewContext.CurrentArea() == "blog" && ViewContext.CurrentAction() != "index" ? "active" : String.Empty)" 
                               href="#" id="navbarDropdownBlog"
                               role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Content Creators
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownBlog">
                                <a class="dropdown-item" asp-area="Blog" asp-controller="Articles" asp-action="My">My articles</a>
                                <a class="dropdown-item" asp-area="Blog" asp-controller="Articles" asp-action="Create">Create article</a>
                            </div>
                        </li>
                    }

                    @if (loggedUser != null && await UserManager.IsInRoleAsync(loggedUser, WebConstants.AdministratorRole))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(ViewContext.CurrentArea() == "admin" ? "active" : String.Empty)" 
                               href="#" id="navbarDropdownAdmin"
                               role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Admins
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownAdmin">
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Upload" asp-action="Words">Bulk upload words</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Users" asp-action="Search">Search Users</a>
                            </div>
                        </li>
                    }

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle @(ViewContext.IsCurrentUrl("home", new[] { "about", "contact" }) ? "active" : String.Empty)"
                           href="#" id="navbarDropdown"
                           role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            About this project
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="About">About me</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </div>
                    </li>
                
                </ul>
            </div>
        </nav>

        <nav class="navbar navbar-expand-lg navbar-dark ml-auto">
            @if (SignInManager.IsSignedIn(User))
            {
                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">@UserManager.GetUserName(User)!</a>
                        </li>
                        <li class="nav-item">
                            <button type="submit" class="btn">Log out</button>
                        </li>
                    </ul>
                </form>
            }
            else
            {
                <div class="ml-auto">
                    <ul class="nav navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Log in</a>
                        </li>
                    </ul>
                </div>
            }
        </nav>
    </div>
</header>

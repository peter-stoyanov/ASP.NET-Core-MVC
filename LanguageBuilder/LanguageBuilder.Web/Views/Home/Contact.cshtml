@{
    ViewBag.Title = "Contact me";
}


@section Styles {
    <style>
        #map {
            width: 100%;
            height: 400px;
            background-color: grey;
        }
    </style>
}

<div class="row justify-content-center">

    <h2>@ViewBag.Title</h2>

    <div class="col-lg-3 justify-content-center align-self-center align-items-center">
        <div class="row justify-content-center">
            <img class="img-thumbnail img-responsive rounded-circle" src="http://i.imgur.com/b6hewAe.jpg" />
        </div>
        <div class="row justify-content-center">
            <address class="col-12 d-flex justify-content-center mt-5 mb-2">
                <a href="https://github.com/peter-stoyanov" class="btn btn-primary w-75">My GitHub Account</a>
            </address>
            <address class="col-12 d-flex justify-content-center my-2">
                <a href="https://www.linkedin.com/in/peshostoyanov/" class="btn btn-primary w-75">My LinkedIn Profile</a>
            </address>
            <address class="col-12 d-flex justify-content-center my-2">
                <a href="mailto:pesho.stoyanov@gmail.com" class="btn btn-primary w-75">Send me an email</a>
            </address>
        </div>
    </div>

    <div class="col-lg-9 mt-5">
        <address>
            @await Component.InvokeAsync(nameof(GoogleMapsComponent),
                new GoogleMapsViewModel { Latitude = 42.70, Longitude = 23.32, ContainerId = "map", Zoom = 8 })
        </address>
    </div>
</div>




@model ComponentLibrary.BootstrapAlertViewModel

@{
    string bootstrapClass = $"alert alert-{Model.Type} alert-dismissible fade show";
}

<div class="@bootstrapClass" role="alert">

    @if (!String.IsNullOrWhiteSpace(Model.StrongText))
    {
        <strong>@Model.StrongText</strong>
    }

    @Model.Text

    @if (Model.HasDismissButton)
    {
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true"><i class="fa fa-times" aria-hidden="true"></i></span>
        </button>
    }
</div>
